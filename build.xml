<project default="compile">
  
  <target name="compile">
    <mkdir dir="build" />
    <javac srcdir="." destdir="build" />
  </target>

  <target name="jar">
    <mkdir dir="build" />
    <jar destfile="build/GameAI.jar" basedir="build">
      <manifest>
        <attribute name="Main-Class" value="Display" />
      </manifest>
    </jar>
  </target>

  <target name="run">
    <java jar="build/GameAI.jar" fork="true" />
  </target>

  <target name="clean">
    <delete dir="build" />
  </target>
  
</project>
