<project default="build">
  
  <target name="build">
    <mkdir dir="build" />
    <javac srcdir="." destdir="build" includeantruntime="false">
      <compilerarg value="-Xlint" />
    </javac>
  </target>

  <target name="jar" depends="build">
    <mkdir dir="jar" />
    <jar destfile="jar/GameAI.jar" basedir="build">
      <manifest>
        <attribute name="Main-Class" value="Display" />
      </manifest>
    </jar>
  </target>

  <target name="run" depends="jar">
    <java jar="jar/GameAI.jar" fork="true" />
  </target>

  <target name="clean">
    <delete dir="build" />
  </target>
  
</project>
