<project default="build">
  
  <target name="build">
    <mkdir dir="build" />
    <javac srcdir="." destdir="build" includeantruntime="false" debug="on">
      <compilerarg value="-Xlint" />
    </javac>
  </target>

  <target name="t3" depends="build">
    <mkdir dir="jar" />
    <jar destfile="jar/TicTacToe.jar" basedir="build">
      <manifest>
        <attribute name="Main-Class" value="TicTacToe" />
      </manifest>
    </jar>
    <java jar="jar/TicTacToe.jar" fork="true" />
  </target>

  <target name="house" depends="build">
    <mkdir dir="jar" />
    <jar destfile="jar/House.jar" basedir="build">
      <manifest>
        <attribute name="Main-Class" value="House" />
      </manifest>
    </jar>
    <java jar="jar/House.jar" fork="true" />
  </target>

  <target name="boids" depends="build">
    <mkdir dir="jar" />
    <jar destfile="jar/Boids.jar" basedir="build">
      <manifest>
        <attribute name="Main-Class" value="Boids" />
      </manifest>
    </jar>
    <java jar="jar/Boids.jar" fork="true" />
  </target>

  <target name="clean">
    <delete dir="build" />
  </target>
  
</project>
